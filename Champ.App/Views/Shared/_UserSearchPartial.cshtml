@using Champ.App.Models.SearchModels
@model SearchViewModel

@foreach (var user in Model.Users)
{
    <div class="row">
        <div class="col-sm-8">
            <div class="well well-lg" style="border: 1px solid gray">
                <h4>@user.Username</h4>
            </div>
            <div>
                @using (Ajax.BeginForm("InviteToContest", "Users", 
                    new AjaxOptions
                    {
                        HttpMethod = "POST",
                        InsertionMode = InsertionMode.Replace,
                        UpdateTargetId = "invitation-result"
                    }))
                {
                    @Html.Hidden("UserId", user.UserId)
                    @Html.Hidden("ContestId", user.ContestId)
                    <input type="submit" class="btn btn-group-sm" value="Invite" />
                }
            </div>
        </div>
    </div>
}