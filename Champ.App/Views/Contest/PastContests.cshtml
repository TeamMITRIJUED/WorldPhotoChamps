@{
    ViewBag.Title = "PastContests";
}

@using Champ.App.Models.ContestModels
@model ICollection<ContestViewModel>

<h2>PastContests</h2>

@foreach (var contest in Model)
{
    <div class="col-md-6">
        <div class="well well-bg" style="background-color: #EBF0FA;">
            <div>
                @Html.ActionLink(contest.Title, "GetContest", "Contest",
                new { Id = contest.Id },
                new { title = "Go to contest" })
            </div>
            <div>
                <strong>Description: </strong>@contest.Description
            </div>
            <div>
                <strong>Participants: </strong>@contest.CountOfParticipants
            </div>           
        </div>
    </div>
}

