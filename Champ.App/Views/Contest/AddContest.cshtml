@model Champ.App.Models.ContestViewModel


@using (@Html.BeginForm(FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, htmlAttributes: new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextBoxFor(m => m.Description, htmlAttributes: new {@class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ClosesOn)
        @Html.TextBoxFor(m => m.ClosesOn, htmlAttributes: new { @class = "form-control", @placeholder = "MM/dd/yyyy" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NumberOfAllowedParticipants)
        @Html.TextBoxFor(m => m.NumberOfAllowedParticipants, htmlAttributes: new {@class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ParticipationStrategy)
        @Html.TextBoxFor(m => m.ParticipationStrategy, htmlAttributes: new { @class = "form-control" })
    </div>

    <div>
        <input class="btn btn-default" type="submit" value="Submit"/>
    </div>
    if (TempData["contest"] != null)
    {
        @Html.Partial("SuccessfullAddition")
    }


}

